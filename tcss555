#!/bin/bash
set -oue pipefail
# Globals:
INPUTPATH="input"
OUTPUTPATH="output"

# Arguments:
#  None

#######################################
# description
# Globals:
#   INPUTPATH
#   OUTPUTPATH
# Arguments:
#  None
#######################################
function parse_args() {
  while [[ $# -gt 0 ]]; do
    case $1 in
      -i | --input)
        INPUTPATH="$2"
        shift # past argument
        shift # past value
        ;;
      -o | --output)
        OUTPUTPATH="$2"
        shift # past argument
        shift # past value
        ;;
      *)
        echo "Unknown option"
        exit 1
        ;;
    esac
  done
}
#  echo "FILE EXTENSION  = ${INPUTPATH}"
#  echo "SEARCH PATH     = ${OUTPUTPATH}"

#######################################
# description
# Globals:
#   INPUTPATH
#   OUTPUTPATH
# Arguments:
#  None
#######################################
function main() {
  parse_args "$@"
  rm -rf "$OUTPUTPATH"
  mkdir -p "$OUTPUTPATH"
  pip install -r requirements.txt &>/dev/null
  python3 main.py "$INPUTPATH" "$OUTPUTPATH"

}

main "$@"
