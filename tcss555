#!/bin/bash
set -oue pipefail
# Globals:
INPUTPATH="/home/austin/UW/multimodal-ml/training"
OUTPUTPATH="output"

function parse_args() {
  while [[ $# -gt 0 ]]; do
    case $1 in
      -i | --input)
        INPUTPATH="$2"
        shift # past argument
        shift # past value
        ;;
      -o | --output)
        OUTPUTPATH="$2"
        shift # past argument
        shift # past value
        ;;
      *)
        echo "Unknown option"
        exit 1
        ;;
    esac
  done
}

function main() {
  parse_args "$@"
  rm -rf "$OUTPUTPATH"
  mkdir -p "$OUTPUTPATH"
  podman build -t local555:main .
  podman run -v "$INPUTPATH":/mnt/input:Z \
             -v "$OUTPUTPATH":/mnt/output:Z \
                local555:main
}

main "$@"
#  podman pull ghcr.io/abomhold/multimodal-ml:main